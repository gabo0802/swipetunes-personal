<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/egg"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/welcome_label"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="104dp"
        android:fontFamily="@font/londrina_shadow"
        android:text="welcome\nto"
        android:textAlignment="center"
        android:textColor="@color/lilac"
        android:textSize="85sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/swipetunes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/egg"
        android:fontFamily="@font/londrina_shadow"
        android:text="swipetunes"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/lilac"
        android:textSize="85sp"
        app:layout_constraintEnd_toEndOf="@+id/welcome_label"
        app:layout_constraintStart_toStartOf="@+id/welcome_label"
        app:layout_constraintTop_toBottomOf="@+id/welcome_label" />

    <ImageView
        android:id="@+id/login"
        android:layout_width="374dp"
        android:layout_height="123dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/swipetunes"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/swipetunes"
        app:layout_constraintTop_toBottomOf="@+id/swipetunes"
        app:srcCompat="@drawable/one" />

    <TextView
        android:id="@+id/prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/caveat_bold"
        android:text="swipe right to log in"
        android:textColor="@color/spotify"
        app:layout_constraintEnd_toEndOf="@+id/login"
        app:layout_constraintStart_toStartOf="@+id/login"
        app:layout_constraintTop_toBottomOf="@+id/login" />




</androidx.constraintlayout.widget.ConstraintLayout>